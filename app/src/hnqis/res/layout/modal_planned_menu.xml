<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:layout_margin="@dimen/dialog_button_space"
    android:background="@android:color/white">
    <org.eyeseetea.malariacare.views.CustomTextView
        android:id="@+id/planned_org_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/dialog_button_background_text"
        android:textSize="@dimen/dialog_button_size"
        android:textColor="@android:color/white"
        app:font_name="@string/font_name_medium" />

    <org.eyeseetea.malariacare.views.CustomTextView
        android:id="@+id/planned_program"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dialog_button_background_text"
        android:textSize="@dimen/dialog_button_size"
        android:textColor="@android:color/white"
        app:font_name="@string/font_name_medium" />
    <org.eyeseetea.malariacare.views.CustomButton
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dialog_button_space"
        android:layout_below="@id/planned_program"
        android:text="@string/add"
        android:background="@color/dialog_button_background_text"
        android:textSize="@dimen/dialog_button_size"
        android:textColor="@android:color/white"
        app:font_name="@string/font_name_medium" />
    <org.eyeseetea.malariacare.views.CustomButton
        android:id="@+id/change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dialog_button_space"
        android:layout_below="@id/add"
        android:text="@string/change_date"
        android:background="@color/dialog_button_background_text"
        android:textSize="@dimen/dialog_button_size"
        android:textColor="@android:color/white"
        app:font_name="@string/font_name_medium"/>
    <org.eyeseetea.malariacare.views.CustomButton
        android:id="@+id/show_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dialog_button_space"
        android:layout_below="@id/change"
        android:text="@string/show_history"
        android:background="@color/dialog_button_background_text"
        android:textSize="@dimen/dialog_button_size"
        android:textColor="@android:color/white"
        app:font_name="@string/font_name_medium" />
    <org.eyeseetea.malariacare.views.CustomButton
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dialog_button_space"
        android:layout_below="@id/show_history"
        android:text="@string/cancel"
        android:background="@color/dialog_red_button"
        android:textSize="@dimen/dialog_button_size"
        android:textColor="@android:color/white"
        app:font_name="@string/font_name_medium" />

</RelativeLayout>