
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:bottom="5dp" android:top="5dp" >
    <shape android:shape="rectangle">
        <!--make a gradient background-->
        <gradient
            android:type="linear"
            android:startColor="@color/filter_gradient_start"
            android:endColor="@color/filter_gradient_end"
            android:angle="90"
            />
        <!-- make the button corners rounded-->
        <stroke
            android:width="2dp"
            android:color="@color/filter_border" />
        <corners android:radius="13dp"/>
    </shape>
</item>
</layer-list>