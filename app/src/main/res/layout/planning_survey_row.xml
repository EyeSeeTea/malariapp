<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight=".36"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        >
        <org.eyeseetea.malariacare.views.CustomTextView
            android:id="@+id/planning_org_unit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:typeface="sans"
            android:textStyle="bold"
            android:textColor="@color/planning_row_text"
            android:paddingBottom="@dimen/dashboard_planning_padding"
            android:text="@string/lorem_ipsum"
            app:tDimension="@string/font_size_level1"
            app:tFontName="@string/medium_font_name"
            />
        <org.eyeseetea.malariacare.views.CustomTextView
            android:id="@+id/planning_program"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:typeface="sans"
            android:textStyle="bold"
            android:text="@string/lorem_ipsum"
            app:tDimension="@string/font_size_level1"
            app:tFontName="@string/medium_font_name"
            />
    </LinearLayout>
    <org.eyeseetea.malariacare.views.CustomTextView
        android:id="@+id/planning_survey_prod"
        android:layout_width="0dp"
        android:layout_weight=".16"
        android:layout_height="wrap_content"
        android:typeface="sans"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingTop="@dimen/dashboard_planning_padding"
        android:paddingBottom="@dimen/dashboard_planning_padding"
        android:text="@string/lorem_ipsum"
        app:tDimension="@string/font_size_level1"
        app:tFontName="@string/medium_font_name"
        />
    <org.eyeseetea.malariacare.views.CustomTextView
        android:id="@+id/planning_survey_qoc"
        android:layout_width="0dp"
        android:layout_weight=".16"
        android:layout_height="wrap_content"
        android:typeface="sans"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="@dimen/dashboard_planning_padding"
        android:paddingBottom="@dimen/dashboard_planning_padding"
        android:text="@string/lorem_ipsum"
        app:tDimension="@string/font_size_level1"
        app:tFontName="@string/medium_font_name"
        />
    <org.eyeseetea.malariacare.views.CustomTextView
        android:id="@+id/planning_survey_schedule_date"
        android:layout_width="0dp"
        android:layout_weight=".16"
        android:layout_height="wrap_content"
        android:typeface="sans"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="@dimen/dashboard_planning_padding"
        android:paddingBottom="@dimen/dashboard_planning_padding"
        android:text="@string/lorem_ipsum"
        android:textSize="@dimen/medium_small_text_size"
        app:tDimension="@string/font_size_level4"
        app:tFontName="@string/medium_font_name"
        />

    <ImageButton
        android:id="@+id/planning_survey_action"
        android:layout_width="0dp"
        android:layout_weight=".16"
        android:layout_height="match_parent"
        android:typeface="sans"
        android:textStyle="bold"
        android:paddingTop="@dimen/dashboard_planning_padding"
        android:paddingBottom="@dimen/dashboard_planning_padding"
        android:src="@drawable/ic_media_play"
        android:background="@null"
        android:tintMode="src_over" />



</LinearLayout>