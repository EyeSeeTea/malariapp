<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_gravity="center_vertical"
    android:weightSum="1"
    android:background="@color/darkGrey">
    <org.eyeseetea.malariacare.views.CustomTextView
        android:id="@+id/planning_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="0dp"
        android:layout_weight=".9"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:typeface="sans"
        android:paddingLeft="@dimen/dashboard_planning_padding"
        android:textColor="@color/planning_header_text"
        android:textSize="18dp"
        app:tDimension="@string/font_size_level1"
        app:tFontName="@string/light_font"
        />

    <ImageView
        android:id="@+id/planning_image_cross"
        android:layout_width="0dp"
        android:layout_weight=".1"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_media_arrow"/>

</LinearLayout>