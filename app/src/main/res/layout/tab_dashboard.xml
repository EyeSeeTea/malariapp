    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dashboard_scroll"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <TabHost
            android:id="@+id/tabHost"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:padding="3dp">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/custom_background_grey"></TabWidget>

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_above="@android:id/tabs"
                    android:layout_alignParentTop="true">

                    <LinearLayout
                        android:id="@+id/tab_plan_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!--Ivan layout here -->

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab_assess_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <org.eyeseetea.malariacare.views.CustomTextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/empty_string"
                            android:textColor="@color/black"
                            android:id="@+id/titleInProgress"
                            android:padding="5dip"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            app:tDimension="@string/font_size_level2"
                            app:tFontName="@string/condensed_font_name" />

                        <FrameLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:paddingTop="@dimen/activity_vertical_margin"
                            android:paddingBottom="@dimen/activity_vertical_margin"
                            android:id="@+id/dashboard_details_container">

                            <TableLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/dashboard_details_table">

                                <ListView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/dashboard_details_list"/>

                            </TableLayout>
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab_improve_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <org.eyeseetea.malariacare.views.CustomTextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/empty_string"
                            android:textColor="@color/black"
                            android:id="@+id/titleCompleted"
                            android:padding="5dip"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            app:tDimension="@string/font_size_level2"
                            app:tFontName="@string/condensed_font_name" />

                        <FrameLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:paddingTop="@dimen/activity_vertical_margin"
                            android:paddingBottom="@dimen/activity_vertical_margin"
                            android:id="@+id/dashboard_completed_container">

                            <TableLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/dashboard_details_table_sent">

                                <ListView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/dashboard_details_list_sent"/>

                            </TableLayout>
                        </FrameLayout>

                     </LinearLayout>
                     <LinearLayout
                         android:id="@+id/tab_monitor_layout"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:orientation="vertical">

                         <ScrollView
                             android:id="@+id/monitor_scroll"
                             android:orientation="vertical"
                             android:layout_width="fill_parent"
                             android:layout_height="fill_parent"
                             android:fillViewport="true">

                         <FrameLayout
                             android:orientation="vertical"
                             android:layout_width="fill_parent"
                             android:layout_height="match_parent"
                             android:id="@+id/dashboard_charts_container">

                             <WebView
                                 android:id="@+id/dashboard_monitor"
                                 android:layout_width="fill_parent"
                                 android:layout_height="wrap_content"
                                 android:background="@color/light_grey"
                                 android:paddingTop="@dimen/activity_vertical_margin"
                                 android:paddingBottom="@dimen/activity_vertical_margin"
                                 >
                             </WebView>
                         </FrameLayout>
</ScrollView>
                     </LinearLayout>
                 </FrameLayout>
             </RelativeLayout>
         </TabHost>

     </ScrollView>