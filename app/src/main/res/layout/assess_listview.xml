<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/header_min_height"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:background="@color/planning_header_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <org.eyeseetea.malariacare.views.CustomTextView
                android:id="@+id/idHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:layout_gravity="left"
                android:gravity="left"
                android:text="@string/assessment_title_facility_date"
                android:ellipsize="end"
                android:lines="1"
                android:paddingLeft="@dimen/row_left_padding"
                android:textColor="@color/planning_header_text"
                android:textSize="@dimen/unsent_rows_text_size"
                app:tDimension="@string/font_size_level2"
                app:tFontName="@string/medium_font_name"  />
            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/circle_stroke_width"
                android:layout_weight="0.2">
            </View>

            <org.eyeseetea.malariacare.views.CustomTextView
                android:id="@+id/nameHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:layout_gravity="right"
                android:gravity="right"
                android:ellipsize="end"
                android:lines="1"
                android:paddingRight="50dp"
                android:text="@string/assessment_title_state"
                android:textColor="@color/planning_header_text"
                android:textSize="@dimen/unsent_rows_text_size"
                app:tDimension="@string/font_size_level2"
                app:tFontName="@string/medium_font_name"/>
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:background="@color/assets_listview_background" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:layout_centerVertical="true"
        android:background="@drawable/fab_background"
        android:padding="3dp">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent"
            android:onClick="onNewSurvey"
            app:srcCompat="@drawable/ic_add_survey"
            android:scaleType="center"
            android:textColor="@color/white"
            app:backgroundTint="@color/grey_light_qm"
            android:textStyle="bold"
            app:fabSize="normal" />
    </LinearLayout>
</RelativeLayout>