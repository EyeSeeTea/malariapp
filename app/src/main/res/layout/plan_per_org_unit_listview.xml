<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:minHeight="@dimen/header_min_height"
        android:background="@color/planning_header_background"
        android:orientation="horizontal">

        <org.eyeseetea.malariacare.views.CustomCheckBox
            android:id="@+id/select_all_orgunits"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:text="@string/select_all"
            app:cFontName="@string/medium_font_name"
            style="@style/EyeSeePlaningOrgUnitHeader" />
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical|left"
            android:orientation="horizontal"
            android:layout_weight="0.5">
            <org.eyeseetea.sdk.presentation.views.CustomTextView
                android:id="@+id/dueDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:text="@string/duedate"
                style="@style/EyeSeePlaningOrgUnitHeader" />

            <org.eyeseetea.sdk.presentation.views.CustomTextView
                android:id="@+id/nameHeader2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:text="@string/header_schedule"
                style="@style/EyeSeePlaningOrgUnitHeader"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="0.1">
            </View>
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_below="@id/header" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:layout_centerVertical="true"
        android:background="@drawable/fab_background"
        android:padding="3dp">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/reschedule_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/grey_light_qm"
            android:onClick="onNewSurvey"
            app:srcCompat="@drawable/ic_icn_assessment"
            app:backgroundTint="@color/grey_light_qm"
            app:fabSize="normal"
            android:scaleType="center" />
    </LinearLayout>
</RelativeLayout>