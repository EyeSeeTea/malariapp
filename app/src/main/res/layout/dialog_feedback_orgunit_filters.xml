<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical">

    <org.eyeseetea.sdk.presentation.views.CustomTextView
        android:id="@+id/programName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/dialog_header_background"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:paddingBottom="20dp"
        android:text="@string/filter"
        android:textColor="@color/darkGrey"
        android:textSize="@dimen/dialog_tile_row_size"
        app:font_name="@string/font_name_medium" />
    <LinearLayout
        android:id="@+id/header"
        android:layout_below="@id/programName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <org.eyeseetea.malariacare.views.CustomRadioButton
                android:id="@+id/chkFailed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dialog_text_row_size"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textAlignment="gravity"
                android:text="@string/feedback_show_only_one_or_show_all"
                android:gravity="right"
                android:button="@null"
                android:background="@null"
                android:drawableRight="@drawable/filter_radio_svg_button_wrapped"
                android:textColor="@color/darkGrey" />
        </LinearLayout>
    <org.eyeseetea.sdk.presentation.views.CustomButton
        android:id="@+id/apply_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:layout_below="@id/header"
        android:text="@string/apply_filters"
        android:background="@color/dialog_button_background_text"
        android:textColor="@color/dialog_button_text"
        android:textSize="@dimen/dialog_button_size"
        android:layout_gravity="center"
        android:gravity="center"
        app:font_name="@string/font_name_medium" />

</RelativeLayout>