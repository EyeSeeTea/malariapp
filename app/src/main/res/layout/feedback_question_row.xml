<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:appCompat="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageView
            android:id="@+id/feedback_question_arrow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".06"
            android:scaleType="centerInside"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".78">

            <org.eyeseetea.malariacare.views.CustomTextView
                android:id="@+id/feedback_question_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:textSize="@dimen/feedback_text_size"
                app:tFontName="@string/regular_font"
                />
            <org.eyeseetea.malariacare.views.CustomTextView
                android:id="@+id/feedback_uid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:text="@string/empty_string"
                android:visibility="gone"
                app:tDimension="@string/font_size_level1"
                app:tFontName="@string/regular_font"
                />
        </LinearLayout>
        <org.eyeseetea.malariacare.views.CustomTextView
            android:id="@+id/feedback_option_value"
            android:layout_width="0dp"
            android:layout_weight=".08"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:paddingTop="5dip"
            android:lines="1"
            android:capitalize="words"
            android:paddingBottom="5dip"
            android:textSize="@dimen/roboto_14"
            app:tDimension="@string/font_size_level1"
            app:tFontName="@string/bold_font"
            />
        <org.eyeseetea.malariacare.views.CustomTextView
            android:id="@+id/feedback_score_label"
            android:layout_width="0dp"
            android:layout_weight=".08"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:paddingRight="5dip"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:lines="1"
            android:capitalize="words"
            android:textSize="@dimen/roboto_14"
            app:tFontName="@string/bold_font"
             />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/feedback_container"
        android:layout_width="match_parent"
        android:background="@color/feedback_background"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:id="@+id/feedback_separator"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/darkGrey"/>
        <org.eyeseetea.malariacare.views.CustomTextView
            android:id="@+id/feedback_feedback_html"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/feedback_question_row_left_padding"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:textColor="@color/black"
            android:text="@string/lorem_ipsum"
            android:background="@color/feedback_background"
            android:textSize="@dimen/feedback_text_size"
            app:tFontName="@string/font_name_regular"
            />
    </LinearLayout>
</LinearLayout>

