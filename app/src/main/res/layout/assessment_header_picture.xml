<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center">

    <org.eyeseetea.malariacare.views.TextCard
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/assessment_sent_date"
        android:id="@+id/idHeader"
        android:background="@drawable/background_header"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="5dip"
        android:layout_weight="0.4"
        android:layout_gravity="center"
        app:tDimension="@string/font_size_level1"
        app:tFontName="@string/condensed_font_name" />

    <org.eyeseetea.malariacare.views.TextCard
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:textAppearance="?android:textAppearanceSmall"
        android:text="@string/assessment_title_rdt"
        android:background="@drawable/background_header"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="5dip"
        android:layout_weight="0.2"
        android:layout_gravity="center"
        android:autoText="false"
        app:tDimension="@string/font_size_level1"
        app:tFontName="@string/condensed_font_name" />

    <org.eyeseetea.malariacare.views.TextCard
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:textAppearance="?android:textAppearanceSmall"
        android:text="@string/assessment_title_info"
        android:background="@drawable/background_header"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="5dip"
        android:layout_weight="0.4"
        android:layout_gravity="center"
        android:autoText="false"
        app:tDimension="@string/font_size_level1"
        app:tFontName="@string/condensed_font_name" />

</TableRow>