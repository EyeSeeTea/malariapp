<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/assessment_row"
    android:background="@drawable/cell_borders">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/facilityDateContainer"
        android:layout_weight="0.5"
        android:layout_gravity="center_vertical">

        <org.eyeseetea.malariacare.views.CustomCheckBox
            android:id="@+id/survey_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_gravity="center_vertical"
            android:text="@string/select_all"
            android:typeface="sans"
            android:paddingTop="@dimen/checkbox_text_top_padding"
            android:paddingLeft="@dimen/dashboard_planning_padding"
            android:textAllCaps="true"
            app:tDimension="@string/font_size_level4"
            app:tFontName="@string/medium_font_name" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/statusContainer"
        android:layout_weight="0.5"
        android:layout_marginTop="@dimen/survey_row_marging"
        android:layout_marginBottom="@dimen/survey_row_marging">

        <org.eyeseetea.malariacare.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:id="@+id/dueDate"
            android:typeface="sans"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="@dimen/dashboard_planning_padding"
            android:paddingBottom="@dimen/dashboard_planning_padding"
            android:text="@string/lorem_ipsum"
            android:textSize="@dimen/medium_small_text_size"
            app:tDimension="@string/font_size_level4"
            app:tFontName="@string/medium_font_name"/>

        <org.eyeseetea.malariacare.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:id="@+id/schedule"
            android:gravity="center"
            android:typeface="sans"
            android:textStyle="bold"
            android:paddingTop="@dimen/dashboard_planning_padding"
            android:paddingBottom="@dimen/dashboard_planning_padding"
            android:text="@string/lorem_ipsum"
            android:textSize="@dimen/medium_small_text_size"
            app:tDimension="@string/font_size_level4"
            app:tFontName="@string/medium_font_name"/>

    </LinearLayout>
</TableRow>