<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:layout_margin="20dp"
    android:background="@android:color/white">
    <org.eyeseetea.malariacare.views.CustomTextView
        android:id="@+id/planned_org_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="18dp"
        android:background="@color/plan_grey_light"
        android:textColor="@color/darkGrey"
        app:tDimension="@string/font_size_level4"
        app:font_name="@string/font_name_medium" />

    <org.eyeseetea.malariacare.views.CustomTextView
        android:id="@+id/planned_program"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:layout_below="@id/planned_org_unit"
        android:textColor="@color/darkGrey"
        app:tDimension="@string/font_size_level4"
        app:font_name="@string/font_name_medium" />
    <org.eyeseetea.malariacare.views.CustomButton
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@id/planned_program"
        android:text="@string/add"
        android:background="@color/dialog_button_text"
        android:textColor="@android:color/white"
        app:tDimension="@string/font_size_level4"
        app:font_name="@string/font_name_regular" />
    <org.eyeseetea.malariacare.views.CustomButton
        android:id="@+id/change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@id/add"
        android:text="@string/header_reschedule"
        android:background="@color/dialog_button_text"
        android:textColor="@android:color/white"
        app:tDimension="@string/font_size_level4"
        app:font_name="@string/font_name_medium" />
    <org.eyeseetea.malariacare.views.CustomButton
        android:id="@+id/show_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@id/change"
        android:text="@string/show_history"
        android:background="@color/dialog_button_text"
        android:textColor="@android:color/white"
        app:tDimension="@string/font_size_level4"
        app:font_name="@string/font_name_medium" />
    <org.eyeseetea.malariacare.views.CustomButton
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@id/show_history"
        android:text="@string/cancel"
        android:background="@color/dialog_button_text"
        android:textColor="@android:color/white"
        app:tDimension="@string/font_size_level4"
        app:font_name="@string/font_name_medium" />

</RelativeLayout>