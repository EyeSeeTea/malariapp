<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56.0dip"
    android:weightSum="1"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:layout_marginLeft="30dp">

    <org.eyeseetea.malariacare.views.CustomTextView
        android:id="@+id/action_bar_multititle_title"
        android:layout_width="fill_parent"
        android:layout_height="18dip"
        android:layout_gravity="center_vertical"
        android:width="0dp"
        android:textSize="16dip"
        app:tFontName="@string/light_font" />

    <org.eyeseetea.malariacare.views.CustomTextView
        android:id="@+id/action_bar_multititle_subtitle"
        android:layout_width="fill_parent"
        android:layout_height="18dip"
        android:layout_gravity="center_vertical"
        android:width="0dp"
        android:textSize="16dip"
        app:tFontName="@string/light_font" />

    <org.eyeseetea.malariacare.views.CustomTextView
        android:id="@+id/action_bar_multititle_dev_subtitle"
        android:layout_width="fill_parent"
        android:layout_height="16dip"
        android:layout_gravity="center_vertical"
        android:width="0dp"
        android:textSize="12dip"
        app:tFontName="@string/light_font" />
        </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2">

        <org.eyeseetea.malariacare.views.DoublePieChart
            android:id="@+id/action_bar_chart"
            android:visibility="gone"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>
</LinearLayout>