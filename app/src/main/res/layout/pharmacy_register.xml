<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:id="@+id/patientIdContainer"
        android:padding="5dip"
        android:layout_weight="0.4"
        android:orientation="horizontal">


         <org.eyeseetea.malariacare.views.TextCard
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/number"
            android:text="1"
            app:tDimension="@string/font_size_level1"
            app:tFontName="@string/medium_font_name"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:id="@+id/patientIdContainer2"
        android:padding="5dip"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <org.eyeseetea.malariacare.views.EditCard
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:id="@+id/patientId"
                android:background="@drawable/background_textfield"
                android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:id="@+id/genderContainer"
        android:alpha="0.8"
        android:padding="5dip"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#bebebe">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gender" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:id="@+id/ageContainer"
        android:padding="5dip"
        android:layout_weight="1"
        android:orientation="horizontal">

        <org.eyeseetea.malariacare.views.EditCard
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                android:id="@+id/age"
                android:background="@drawable/background_textfield"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:id="@+id/testResultsContainer"
        android:padding="5dip"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#bebebe">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/testResults"
                android:tag="listener" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>