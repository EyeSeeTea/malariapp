<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        android:id="@+id/switchQuestion"
        android:background="@drawable/background_parent">

        <org.eyeseetea.malariacare.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/adherence_info_switchquestion"
            android:id="@+id/statement"
            app:tDimension="@string/font_size_level1"
            app:tFontName="@string/medium_font_name"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/visibilitySwitch"
            android:textOn="@string/yes"
            android:textOff="@string/no" />
    </GridLayout>

    <Space
        android:layout_width="fill_parent"
        android:layout_height="40dip" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="2"
        android:id="@+id/explanationLayout"
        android:visibility="gone">

        <org.eyeseetea.malariacare.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/adherence_title_explanation"
            android:id="@+id/explanationHeader"
            android:background="@drawable/background_header"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:paddingLeft="10dip"
            app:tDimension="@string/font_size_level1"
            app:tFontName="@string/medium_font_name"/>

        <org.eyeseetea.malariacare.views.CustomEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:id="@+id/explanationText"
            android:text="Record below the patient ID numbers of 20 patients prescribed ACTs from the Pharmacy Register.\nLocate the patient IDs from Step 1 in the Laboratory and/or Clinical Registers and record their test result in the appropriate column. "
            android:background="@drawable/background_even"
            android:textSize="14sp"
            android:paddingLeft="15dip" />

    </GridLayout>

    <Space
        android:layout_width="fill_parent"
        android:layout_height="40dip" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="2"
        android:id="@+id/pharmacyRegister"
        android:visibility="gone">

        <org.eyeseetea.malariacare.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/adherence_info_pharmacy_register"
            android:id="@+id/registerTitle"
            android:textStyle="bold"
            android:paddingBottom="20dip"
            app:tDimension="@string/font_size_level1"
            app:tFontName="@string/medium_font_name"/>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register1Table"
            android:tag="AdherenceTable1"
            android:layout_gravity="center">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/registerHeader"
                android:layout_gravity="center"
                android:background="@drawable/background_odd">

                <org.eyeseetea.malariacare.views.CustomTextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/space1"
                    android:layout_weight="1"
                    app:tDimension="@string/font_size_level1"
                    app:tFontName="@string/medium_font_name"/>

                <org.eyeseetea.malariacare.views.CustomTextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/adherence_info_patient_id"
                    android:id="@+id/patientId1"
                    android:background="@drawable/background_header"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:lines="2"
                    android:padding="5dip"
                    android:layout_weight="1"
                    app:tDimension="@string/font_size_level1"
                    app:tFontName="@string/medium_font_name"/>

                <org.eyeseetea.malariacare.views.CustomTextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/adherence_title_gender"
                    android:id="@+id/gender"
                    android:background="@drawable/background_header"
                    android:textColor="#ffffff"
                    android:lines="2"
                    android:gravity="center"
                    android:padding="5dip"
                    android:layout_weight="1"
                    app:tDimension="@string/font_size_level1"
                    app:tFontName="@string/medium_font_name"/>

                <org.eyeseetea.malariacare.views.CustomTextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/adherence_title_age"
                    android:id="@+id/age"
                    android:background="@drawable/background_header"
                    android:textColor="#ffffff"
                    android:lines="2"
                    android:gravity="center"
                    android:padding="5dip"
                    app:tDimension="@string/font_size_level1"
                    app:tFontName="@string/medium_font_name"/>

                <org.eyeseetea.malariacare.views.CustomTextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/adherence_title_test_results"
                    android:id="@+id/results"
                    android:background="@drawable/background_header"
                    android:textColor="#ffffff"
                    android:lines="2"
                    android:gravity="center"
                    android:padding="5dip"
                    android:layout_weight="1"
                    app:tDimension="@string/font_size_level1"
                    app:tFontName="@string/medium_font_name"/>

                <org.eyeseetea.malariacare.views.CustomTextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/score"
                    android:id="@+id/scoreHeader1"
                    android:background="@drawable/background_header"
                    android:padding="5dip"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:lines="2"
                    android:layout_weight="1"
                    app:tDimension="@string/font_size_level1"
                    app:tFontName="@string/medium_font_name" />
            </TableRow>
        </TableLayout>
    </GridLayout>

    <Space
        android:layout_width="fill_parent"
        android:layout_height="40dip" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="2"
        android:id="@+id/explanation2Layout"
        android:visibility="gone">

        <org.eyeseetea.malariacare.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/adherence_title_explanation"
            android:id="@+id/explanation2Header"
            android:background="@drawable/background_header"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:paddingLeft="10dip"
            app:tDimension="@string/font_size_level1"
            app:tFontName="@string/medium_font_name" />

        <org.eyeseetea.malariacare.views.CustomTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:id="@+id/explanation2Text"
            android:text="In the Laboratory Register, record the patient ID numbers 20 patients: 5 RDT +; 5 RDT -; 5 microscopy +; 5 microscopy -.\nLocate the patient IDs from Step 1 in the Pharmacy Register and record whether they received ACTs in the “ACT Prescribed” column by ticking either Y or N. For health facilities without microscopy, tick the N/A box"
            android:background="@drawable/background_even"
            android:textSize="14sp"
            android:paddingLeft="15dip"
            app:tDimension="@string/font_size_level1"
            app:tFontName="@string/medium_font_name" />
    </GridLayout>

    <Space
        android:layout_width="fill_parent"
        android:layout_height="40dip" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="1"
        android:id="@+id/pharmacy2Register"
        android:visibility="gone">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="AdherenceTable2"
            android:id="@+id/register2Table">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/register2Header"
                android:layout_gravity="center"
                android:background="@drawable/background_odd">

                <org.eyeseetea.malariacare.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/space2"
                    android:layout_weight="1"
                    app:tDimension="@string/font_size_level1"
                    app:tFontName="@string/medium_font_name" />

                <org.eyeseetea.malariacare.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/adherence_info_patient_id"
                    android:id="@+id/patientId2Header"
                    android:background="@drawable/background_header"
                    android:padding="5dip"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:lines="2"
                    android:layout_weight="1"
                    app:tDimension="@string/font_size_level1"
                    app:tFontName="@string/medium_font_name" />

                <org.eyeseetea.malariacare.views.CustomTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/adherence_title_test_results"
                    android:id="@+id/testResultsHeader"
                    android:background="@drawable/background_header"
                    android:padding="5dip"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:lines="2"
                    android:layout_weight="1"
                    app:tDimension="@string/font_size_level1"
                    app:tFontName="@string/medium_font_name" />

                <org.eyeseetea.malariacare.views.CustomTextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/adherence_info_prescribed"
                    android:id="@+id/actPrescribedHeader"
                    android:background="@drawable/background_header"
                    android:padding="5dip"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:layout_weight="1"
                    android:lines="2"
                    app:tDimension="@string/font_size_level1"
                    app:tFontName="@string/medium_font_name" />

                <org.eyeseetea.malariacare.views.CustomTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/score"
                    android:id="@+id/scoreHeader"
                    android:background="@drawable/background_header"
                    android:padding="5dip"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:lines="2"
                    android:layout_weight="1"
                    app:tDimension="@string/font_size_level1"
                    app:tFontName="@string/medium_font_name" />

            </TableRow>



        </TableLayout>

    </GridLayout>
</LinearLayout>